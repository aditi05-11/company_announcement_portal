<style>
.d-flex .form-control {
  flex: 1; 
  margin-right: 10px;
}

.d-flex .form-control:last-child {
  margin-right: 0;
}
</style>

<div class="container-fluid">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12">  
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6"><br>
            <div class="card">
              <div class="card-body">
                <h1>Log in</h1>
                <%= form_with(url: login_path, local: true) do |form| %>
                  <p>
                    <%= form.label :email %><br>
                    <%= form.email_field :email, class: "form-control", placeholder: "Enter an email address" %>
                  </p>
                  <p>
                    <%= form.label :password %><br>
                    <%= form.password_field :password, class: "form-control", placeholder: "Enter a password" %>
                  </p>
                  <div>
                    <%= form.submit "Log in", class: "btn btn-outline-success" %>
                  </div>
                <% end %>
              </div>
            </div> 
          </div>
          <div class="col-md-3"></div>
        </div>
      </div>
    </div>
  </div>
</div>
